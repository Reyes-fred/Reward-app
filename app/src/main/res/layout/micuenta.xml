<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/barrasuperior"
        android:orientation="horizontal"
        android:id="@+id/linea"
        android:layout_above="@+id/tool_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MI CUENTA"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/textView" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdgeLength="0dp"
        android:fillViewport="false"
        android:layout_below="@+id/linea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NOMBRE"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingTop="15dp"
        android:id="@+id/titulo"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="datos personales"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:hint="Nombre:"
            android:ems="10"
            android:background="@drawable/corneraccesotext"
            android:layout_marginTop="20dp"
            android:id="@+id/nombre" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:hint="Apellido"
            android:background="@drawable/corneraccesotext"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/apellido" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:hint="Telefono"
            android:background="@drawable/corneraccesotext"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/numero"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:hint="Email:"
            android:background="@drawable/corneraccesotext"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/email" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:hint="Contraseña:"
            android:background="@drawable/corneraccesotext"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/contrasena" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:hint="Cumpleaños:"
            android:background="@drawable/corneraccesotext"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/cumpleanos" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/corneraccesotext"
                android:gravity="center"
                >
                <CheckBox
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:buttonTint="#7b0088"
                    android:id="@+id/check"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"

                >
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:text="Sí, me gustaría recibir noticias y ofertas especiales en mi correo electrónico"/>
            </LinearLayout>

        </LinearLayout>



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Número de miembro #"
            android:paddingBottom="40dp"
            android:id="@+id/nummiembro" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Enviar"
            android:textSize="20dp"
            android:textColor="#fff"
            android:background="@drawable/corner"
            android:id="@+id/enviar"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>