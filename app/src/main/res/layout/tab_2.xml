<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="#7b0088">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corneracceso"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">

        <ScrollView
            android:id="@+id/ScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdgeLength="0dp"
            android:fillViewport="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Registra tus datos"
                android:paddingTop="40dp"
                android:textColor="#616161"
                android:gravity="top|center"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:hint="*Nombre:"
                android:ems="10"
                android:background="@drawable/corneraccesotext"
                android:layout_marginTop="20dp"
                android:id="@+id/nombre" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:hint="Apellido:"
                android:background="@drawable/corneraccesotext"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/apellido" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="phone"
                android:hint="Teléfono:"
                android:background="@drawable/corneraccesotext"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/numtelf"
               />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:hint="*Email:"
                android:background="@drawable/corneraccesotext"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/email" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:hint="*Verificar Email:"
                android:ems="10"
                android:background="@drawable/corneraccesotext"
                android:layout_marginTop="10dp"
                android:id="@+id/verificaemail" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:hint="*Contraseña:"
                android:background="@drawable/corneraccesotext"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/contrasena" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:hint="*Verifica Contraseña:"
                android:background="@drawable/corneraccesotext"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/verificacontrasena" />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:hint="Cumpleaños: YYYY-MM-DD"
                android:background="@drawable/corneraccesotext"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:id="@+id/cumpleanos" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/corneraccesotext"
                    android:gravity="center"
                    >
                    <CheckBox
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:buttonTint="#7b0088"
                        android:id="@+id/acepta"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/corneraccesotext"
                    >
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textColor="#805677fc"
                        android:textAllCaps="false"
                        android:id="@+id/terminos"
                        android:background="@android:color/transparent"
                        android:text="@string/terminos"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingBottom="40dp">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/registrarse"
                android:textColor="#fff"
                android:textSize="20dp"
                android:background="@drawable/corner"
                android:text="REGISTRARSE"/>
            </LinearLayout>
        </LinearLayout>
</ScrollView>



        </LinearLayout>



</RelativeLayout>